@model WebApplication1.Models.DashboardModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Dashboard</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <style>
        body {
            background-image: url('../../images/password.jpg');
            overflow-y: hidden;
            overflow-x: hidden
        }

        #roundedcorner {
            border-radius: 20px;
            background: #73AD21;
            padding: 50px;
        }
    </style>
    <nav class="navbar bg-body-tertiary fixed-top">
        <div class="container-fluid">
            <ul class="nav nav-tabs">
                <li class="nav-item">
                    <a class="navbar-brand fs-1">PASSWORD</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link fs-2" aria-current="page" href="/Dashboard/Manage">Manage</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active fs-2" aria-current="page" href="/Dashboard/Restore">Recover</a>
                </li>
            </ul>
            <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar" aria-controls="offcanvasNavbar" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasNavbar" aria-labelledby="offcanvasNavbarLabel">
                <div class="offcanvas-header">
                    <h5 class="offcanvas-title" id="offcanvasNavbarLabel">Welcome</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                </div>
                <div class="offcanvas-body">
                    <ul class="navbar-nav justify-content-end flex-grow-1 pe-3">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                JAPK Repository
                            </a>
                            <ul class="dropdown-menu">
                                <li class="nav-item">
                                    <a class="nav-link active" aria-current="page" href="/Dashboard/Homepage">Home</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link active" aria-current="page" href="/Dashboard/LearnMore">About Us</a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Password
                            </a>
                            <ul class="dropdown-menu">
                                <li class="nav-item">
                                    <a class="nav-link active" aria-current="page" href="/Dashboard/Manage">Manage</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link active" aria-current="page" href="/Dashboard/Restore">Recover</a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Settings
                            </a>
                            <ul class="dropdown-menu">
                                <li class="nav-item">
                                    <a class="nav-link active" aria-current="page" href="/Dashboard/Profile">Profile</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link active" aria-current="page" href="/Dashboard/LoginDetails">Login Details</a>
                                </li>
                                <li>
                                    <hr class="dropdown-divider">
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link bg-danger" aria-current="page" href="@Url.Action("LogOut", "Login")">Logout</a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>

    @*general repository layout*@
    <div>

        <table class="table table-bordered table-sm table-striped border-black border border-5 bg-light border border-dark" style= "margin-top:50px" id="roundedcorner">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Site name</th>
                    <th scope="col">Password</th>
                    <th scope="col">Username</th>
                    <th scope="col">Email</th>
                    <th scope="col">Contact Number</th>
                    <th scope="col">Options</th>
                </tr>
            </thead>
            <tbody class="table-group-divider">
                @{var ID = 0;
                    foreach (var data in Model.PasswordList)
                    {
                        <tr>
                            <th scope="row">@ID</th>
                            <td>@data.SITE_NAME</td>
                            <td>@data.SITE_PASSWORD</td>
                            <td>@data.USER_NAME</td>
                            <td>@data.EMAIL</td>
                            <td>@data.CONTACT_NUMBER</td>
                            <td>
                                <div>
                                    <button class="btn btn-danger btn-sm" onclick="recoverAccount('@data.ID', '@data.SITE_NAME', '@data.USER_NAME')">Recover</button>
                                </div>
                            </td>
                        </tr>
                        ID++;
                    }
                }
            </tbody>
        </table>
    </div>

</body>
</html>

<script type="text/javascript">

    function recoverAccount(userId, siteName, userName) {

        if (confirm("Are you sure you want to recover your account in " + siteName + " with the username " + userName + "?")) {

            var data = {
                userId: userId
            }

            $.ajax({
                type: "POST",
                url: "/Dashboard/RestoreAccount",
                dataType: "JSON",
                data: JSON.stringify(data),
                contentType: 'application/json; charset=utf8',
                success: function (res) {
                    alert(res.msg)
                    location.reload(true);
                },
                error: function () {
                    alert("An error occurred")
                }
            })

        }

    }

</script>
