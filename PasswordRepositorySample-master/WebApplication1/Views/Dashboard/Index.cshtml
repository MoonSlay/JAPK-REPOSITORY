<script type="text/javascript">

    function deleteAccount(userId, siteName, userName) {

        if (confirm("Are you sure you want to delete your account in " + siteName + " with the username " + userName + "?")) {

            var data = {
                userId: userId
            }

            $.ajax({
                type: "POST",
                url: "/Dashboard/DeleteAccount",
                dataType: "JSON",
                data: JSON.stringify(data),
                contentType: 'application/json; charset=utf8',
                success: function (res) {
                    alert(res.msg)
                    location.reload(true);
                },
                error: function () {
                    alert("An error occurred")
                }
            })

        }

    }

    function showPassword(userId, dec_Pass) {

        $('#show-password-modal').modal('show');

        $('#txb-show-password').val(dec_Pass);
        $('#pass-id').val(userId)

    }

    function showAccountDetails(userId, siteName, sitePass, userName, email, contact) {

        $('#modify-password-modal').modal('show');

        $('#txb-site-name').val(siteName);
        $('#txb-site-password').val(sitePass);
        $('#txb-username').val(userName);
        $('#txb-email').val(email);
        $('#txb-contact').val(contact);
        $('#pass-id').val(userId)

    }


    function modifyAccountDetails() {

        var siteName = $('#txb-site-name').val();
        var sitePass = $('#txb-site-password').val();
        var userName = $('#txb-username').val();
        var email = $('#txb-email').val();
        var contact = $('#txb-contact').val();
        var userId = $('#pass-id').val()


        if (confirm('Are you sure you want to modify the account details?')) {

            var data = {
                siteName: siteName,
                sitePass: sitePass,
                userName: userName,
                email: email,
                contact: contact,
                userId: userId,
            }

            $.ajax({
                type: "POST",
                url: "/Dashboard/UpdateAccount",
                dataType: "JSON",
                data: JSON.stringify(data),
                contentType: 'application/json; charset=utf8',
                success: function (res) {
                    alert(res.msg)
                    location.reload(true);
                },
                error: function () {
                    alert("An error occurred")
                }
            })

        }

    }
