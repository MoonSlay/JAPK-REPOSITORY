    @*general repository layout*@
    <div>
        <h4 style="text-align:center">Welcome back</h4>
        <button class="btn btn-info btn-sm" type="button" data-bs-toggle="modal" data-bs-target="#add-password-modal">Add new password</button>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Site name</th>
                    <th scope="col">Password</th>
                    <th scope="col">Username</th>
                    <th scope="col">Email</th>
                    <th scope="col">Contact Number</th>
                    <th scope="col">Options</th>
                </tr>
            </thead>
            <tbody>
                @{
                    foreach (var data in Model.PasswordList)
                    {
                        <tr>
                            <th scope="row">@data.ID</th>
                            <td>@data.SITE_NAME</td>
                            <td>@data.SITE_PASSWORD</td>
                            <td>@data.DEC_PASSWORD</td>
                            <td>@data.USER_NAME</td>
                            <td>@data.EMAIL</td>
                            <td>@data.CONTACT_NUMBER</td>
                            <td>
                                <div>
                                    <button class="btn btn-danger btn-sm" onclick="deleteAccount('@data.ID', '@data.SITE_NAME', '@data.USER_NAME')">Delete</button>
                                    <button class="btn btn-info btn-sm" onclick="showAccountDetails('@data.ID', '@data.SITE_NAME','@data.SITE_PASSWORD', '@data.USER_NAME', '@data.EMAIL', '@data.CONTACT_NUMBER')">Modify</button>
                                    <button class="btn btn-info btn-sm" onclick="showPassword('@data.ID', '@data.DEC_PASSWORD')">Show Password</button>
                                </div>
                            </td>
                        </tr>

                    }
                }
            </tbody>
        </table>
    </div>

    @*add new student modal*@
    <div id="add-password-modal" class="modal fade" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Add new student</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    @Html.Partial("_AddPassword", Model.PasswordModel)
                </div>
            </div>
        </div>
    </div>

    @*modify password modal*@
    <div id="modify-password-modal" class="modal fade" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Modify Account details</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <label id="label-site-name">Site Name</label>
                    <input type="text" class="form-control" id="txb-site-name" />

                    <label id="label-site-password">Site Password</label>
                    <input type="text" class="form-control" id="txb-site-password" />

                    <label id="label-username">Username</label>
                    <input type="text" class="form-control" id="txb-username" />

                    <label id="label-email">Email</label>
                    <input type="text" class="form-control" id="txb-email" />

                    <label id="label-contact">Contact Number</label>
                    <input type="text" class="form-control" id="txb-contact" />

                    <input type="hidden" id="pass-id" />

                    <div style="text-align:right">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <input type="button" value="Modify account" class="btn btn-info" onclick="modifyAccountDetails()" />
                    </div>

                </div>
            </div>
        </div>
    </div>

    @*show password modal*@
    <div id="show-password-modal" class="modal fade" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Modify Account details</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <label id="label-show-password">Site Password</label>
                    <input type="text" class="form-control" id="txb-show-password" value="@Model.PasswordModel.DEC_PASSWORD" />

                    <input type="hidden" id="pass-id" />
                    <div style="text-align:right">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    </div>

                </div>
            </div>
        </div>
    </div>

</body>
